azul= #0082A3
verdeClaro=#40C0A0
body 
	font-size 16px	
	font-family "Open Sans", arial, sans-serif
	height 100%
header
	font-size 1em
	color azul
	background-image: url(../img/bg02.png);
	.contenedor	
		margin auto
		////////////////////Diseño FlexBOX ////////////////	
		display -webkit-flex
		-webkit-flex-flow row wrap
		///////////////////////////////////////////////////
		.imagenIzq
			-webkit-flex 1  	//diseño flexbox
			padding 0
			margin-left 5%
			figure
				margin 0
				img
					width 150px
		.menu
			-webkit-flex 2			/// el doble del tamaño
			ul
				margin 0
				li
					margin-bottom 0em
					display inline-block
					margin-left 2%
					padding 30px 0px 0px
					
					a
						text-shadow 1px 1px 0px gray
						padding 1em 0.5em
						text-decoration none
						font-weight:ligther
						color black
						font-size 1.3em
						text-align rigth
						transition all 0.4s /// para que la transicion se lenta
						//a:nth-of-type
						&:hover			
							background-color rgba(224,224,224,1)
							margin-left 2%
							padding 1em 0.5em
							color azul
							border-bottom solid 
							border-color #40C0A0
///////menu 
.menufixed
	position fixed
	background-color white
	z-index 1000
	width 100%
	top 0
	.contenedor 
		margin-bottom 10px
		.imagenIzq
			display none
		.menu
			margin-left 20%
			ul li a
					&:hover
						padding 0.5em 0.5em




/////////Carrousel
.carrousel
	width 100%
	max-width 1400px
	.Slider
		width 100%
		.images
			position relative
			width 100%
			.slidesjs-container
				margin-bottom -22%
			.active
				background-color black
		
.sectionSistema	
	.articleSistema
		width 90%
		max-width 1000px
		margin 20px 13%
		.tituloP
			color azul
			text-align center
		p
			text-align justify
			
.sectionSecundario	
	margin auto
	display -webkit-flex
	-webkit-flex-flow row wrap
	.Hemo	
		-webkit-flex 1
		margin 6% 3% 2%
		text-align justify
		.tituloIzq
			h2
				text-align center
		.Hemo2
			img
				text-align justify
				float left
	.Convenios
		-webkit-flex 1
		margin 6% 3% 2%
		.Conv
			p
				text-align justify
			img
				float left
.Maps
	.googleMaps
		-webkit-flex-flow row wrap
		.tituloG
			-webkit-flex 1
			text-align center
			color azul
		#google
			-webkit-flex 1
			margin 5% 25%
			border solid
	

.slidesjs-pagination
	list-style none
	overflow hidden
	background-color gray
	display none
	li
		float left
		a
			display block
			padding 10px 20px
			color white
			background-color gray
			text-decoration none
		&:hover
			background-color black	

.slidesjs-navigation
	background-color black
	color white
	text-decoration none
	display inline-block
	padding 10px 20px
	float right	
	display none	


	
#TituloS
	font-size 1em
	color azul
	margin-top 120px
	margin-bottom -50px
	h2
		text-align center

footer
	display -webkit-flex
	-webkit-flex-flow row wrap
	background-color black
	height 110px
	padding-top 40px
	#titFooter
		-webkit-flex 1
		margin-left 30px
		font-size 1 em
		h3
			color white
	.siguenos
		-webkit-flex 1
		a
			text-decoration none
			color white
			
			img
				width 10%
				border-radius 50%
				
///////////Responsive web Desing //////////////////
@media only screen and (max-width: 699px)
	header
		margin 0
		padding 0
		.contenedor
			margin-bottom 10px
			border-bottom solid
			border-color black
			display -webkit-flex
			-webkit-flex-flow column wrap
			.imagenIzq
				margin 0%
				padding 0
				-webkit-flex 1
				figure
					margin-left 35%  
			.menu
				font-size 0.8em
				margin-bottom 10%
				padding-bottom 10px
				-webkit-flex 3  
				ul
					
					li
						margin 0
						a
							margin-bottom 1px
							
						&:hover	
							padding 0.1em 0.5em
	.menufixed
		.contenedor 
			
			.menu
				margin 0
				ul
					margin-bottom 1%
				
				
			
	
	
		

		
		
		
